<div class="main_chat_header">
  <div class="header-title">Room1</div>
  <div class="close-btn"><a href="#">チャットを終了する</a></div>
</div>

<div class="main_chat_message">
  <div class="messages">
    <div class="post-info">
      <div class="post-user">ユーザー1</div>
      <div class="post-date">2022-10-19(Wed) 12:43:30</div>
    </div>
      <div class="post-text">おはよう</div>
  </div>
  
  <div class="messages">
    <div class="post-info">
      <div class="post-user">User2</div>
      <div class="post-date">2022-10-19(Wed) 12:43:30</div>
    </div>
      <div class="post-text">Hi</div>
  </div>

</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>

</div>